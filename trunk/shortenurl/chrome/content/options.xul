<?xml-stylesheet href="chrome://global/skin/"?>

<!DOCTYPE overlay SYSTEM "../locale/shortenURL.dtd">

<prefwindow
  xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
  id="shortenURL-config"
  title="Shorten URL &options.title;">

  <prefpane id="prefpane">

    <preferences>
      <preference
        id="extensions.shortenURL.baseURL"
        name="extensions.shortenURL.baseURL"
        type="int" />
      <preference
        id="extensions.shortenURL.autocopy"
        name="extensions.shortenURL.autocopy"
        type="bool" />
      <preference
        id="extensions.shortenURL.autotweet"
        name="extensions.shortenURL.autotweet"
        type="bool" />
    </preferences>

    <vbox>
      <groupbox flex="1">
        <hbox align="center">
          <label value="Shorten URL &options.select;"
                 accesskey="&options.select.key;"
                 control="shortenService" />
          <menulist id="menulist" sizetopopup="pref"
                    preference="extensions.shortenURL.baseURL">
            <menupopup id="menupopup"></menupopup>
          </menulist>
        </hbox>
      </groupbox>

      <groupbox flex="1">
        <vbox>
          <hbox>
            <checkbox
              id="extensions.shortenURL.autocopy"
              label="&options.autocopy;"
              accesskey="&options.autocopy.key;"
              preference="extensions.shortenURL.autocopy" />
            <checkbox
              id="extensions.shortenURL.autotweet"
              label="&options.autotweet;"
              accesskey="&options.autotweet.key;"
              preference="extensions.shortenURL.autotweet" />
          </hbox>
        </vbox>
      </groupbox>

    </vbox>

  </prefpane>

  <script type="application/x-javascript" src="options.js" />

</prefwindow>

