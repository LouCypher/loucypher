  <name>Image Animation Mode</name>
  <image><![CDATA[custombuttons-stdicon-1]]></image>
  <mode>0</mode>
  <initcode><![CDATA[var pref = "image.animation_mode";

function getPref() {
  return cbu.ps.getCharPref(pref);
}

var mp = <menupopup xmlns={xulns}
                   oncommand="this.parentNode.setPref(event.target.value)"
                   onpopupshowing="this.parentNode.popupShowing(this);"/>;

function addMenuitem(aNode, aLabel, aValue, aChecked) {
  aNode.appendChild(cbu.makeXML(<menuitem xmlns={xulns} type="radio"
                                          label={aLabel} value={aValue}
                                          checked={aChecked}/>));
}

this.appendChild(cbu.makeXML(mp));
this.type = "menu";

this.setPref = function setPref(aValue) {
  cbu.ps.setCharPref(pref, aValue);
}

this.popupShowing = function popupShowing(aNode) {
  while (aNode.lastChild) {
    aNode.removeChild(aNode.lastChild);
  }

  var values = [{label: "Normal", value: "normal"},
                {label: "Once",   value: "once"},
                {label: "None",   value: "none"}]
  for (var i = 0; i < values.length; i++) {
    addMenuitem(aNode, values[i].label, values[i].value,
                values[i].value == getPref());
  }
}


]]></initcode>
